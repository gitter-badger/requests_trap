.row
  .col-md-12
    = link_to "Back", root_path
    #link
      = link_to requests_path, :remote => true do
        Reload
        %span.glyphicon.glyphicon-refresh

    %h3
      Trapped requests for
      %strong= "/#{params[:trap_id]}/"
    %br
    .table-responsive
      %table.table.table-condensed
        %thead
          %tr
            %th Date
            %th Remote IP
            %th Request method
            %th Scheme
            %th Query-string
            %th Query-params
            %th Cookies
            %th Headers
        %tbody
          = render :partial => "table", :collection => @requests